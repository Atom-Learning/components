{
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "module": "ESNext",
    "jsx": "react",
    "target": "es2018",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"]
    },
    "declaration": true
  },
  "include": ["./src/*", "types/global.d.ts"],
  "exclude": ["./src/**/*.test.*"]
}
