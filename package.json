{
  "name": "@atom-learning/components",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "NODE_ENV=development microbundle watch  --jsx React.createElement",
    "build:lib": "NODE_ENV=production microbundle --jsx React.createElement --format modern,cjs --strict",
    "build:docgen": "node ./scripts/generate-component-props",
    "build:rollup": "",
    "prepublishOnly": "run-s test clean build:lib build:docgen",
    "clean": "del ./dist/",
    "format": "prettier 'src/**/*.{js,ts,tsx}' --write",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "validate": "run-p validate:**",
    "validate:dependencies": "yarn audit --groups dependencies",
    "validate:linting": "eslint 'src/**/*.{js,ts,tsx}' --quiet",
    "validate:size": "yarn build:lib && size-limit",
    "validate:types": "tsc --noEmit",
    "start:sandbox": "parcel ./sandbox/index.html --out-dir sandbox/build --open",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Atom-Learning/components.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Atom-Learning/components/issues"
  },
  "homepage": "https://github.com/Atom-Learning/components#readme",
  "size-limit": [
    {
      "path": "dist/index.modern.js"
    }
  ],
  "devDependencies": {
    "@atom-learning/theme": "0.1.0-beta.4",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@storybook/addon-a11y": "^6.1.14",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/react": "^6.1.14",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@types/jest": "^26.0.20",
    "@types/jest-axe": "^3.5.1",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-transform-stitches-display-name": "^0.0.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "glob": "^7.1.6",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "jest-dom": "^4.0.0",
    "jest-stitches": "^1.0.4",
    "lint-staged": "^10.5.3",
    "microbundle": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "react": "^17.0.1",
    "react-docgen-typescript": "^1.21.0",
    "react-dom": "^17.0.1",
    "rollup": "^2.39.0",
    "rollup-plugin-bundle-size": "^1.0.3",
