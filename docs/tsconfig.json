{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components": ["../lib/dist/"],
      "@components/*": ["../lib/dist/*"],
      "@pkgJson": ["../lib/package.json"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../dist"],
  "exclude": ["node_modules"]
}
